{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "skipLibCheck": true,
    "incremental": true,
    "lib": ["es5", "es6", "dom"],
    "moduleResolution": "node",
    "target": "es2017"
  },
  "exclude": ["node_modules", "dist"]
}
